NAME = ft_ls
SRC = ./ft_ls.c
OBJECTS = ./ft_ls.o
INC = 

all: $(NAME)
	
$(NAME):
	make -C ./libft
	gcc -c -Wextra -Werror -Wall  $(SRC) -I $(INC) .libft/libft.a
	ar rc $(NAME) $(OBJECTS)
	ranlib $(NAME)

clean:
	rm -f $(OBJECTS)

fclean: clean
	rm -f $(NAME)

re: fclean all
